{
  "manifest_version": 3,
  "name": "Search on Amazon - Search highlighted text on amazon",
  "version": "0.0.1",
  "description": "eBay Price Insights, ebay Sold History, Offer History - High, Low, Average, Mid prices + keyword & price Counter",
  "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "contextMenus",
      "unlimitedStorage"  
  ],
  "commands":{
    "go-to-amazon":{
      "suggested_key":{
        "default": "Alt+1"
      },
      "description": "Search on amazon"
    }
  },
  "action": {
      "default_popup": "html/popup.html"
  },
  "content_scripts":[
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.script.js"]
    }
  ],
  "background": {
      "service_worker": "scripts/background.script.js"
  },
  "host_permissions": [

  ],
  "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
      {
          "resources": [

          ],
          "matches": [
              "<all_urls>"
          ]
      }
  ],
  "icons": {
      "16": "icons/16x16.png",
      "48": "icons/16x16.png",
      "128": "icons/16x16.png"
  },
  "incognito": "spanning"
}